#! /usr/bin/env python3

def create_board():
    board = []
    return board

def display_board(board):
    max_y = 0
    for m in range(len(board)):
        if board[m][2] > max_y:
            max_y = board[m][2]


    
    for i in range(max_y + 1):
        max_x = 0
        for j in range(len(board)):
            if board[j][2] == i and board[j][1] > max_x:
                max_x = board[j][1]

        for y in range(max_x + 1):
            condition = False
            for z in range(len(board)):
                if board[z][1] == y and board[z][2] == i:
                    print(board[z][0], end = "")
                    condition = True

            if condition == False:
                print(" ", end = "")
                
                
        print()

        

def add_wall(board, x, y):
    board.append(["#", x, y])

def create_player(board, x, y):
    board.append(["@", x, y])
def check_pos(board, x, y):
    for i in range(len(board)):
        if board[i][1] == x and board[i][2] == y:
            return board[i][0]

# ======================================================================
# Huvudprogram
# ======================================================================
board = create_board()

add_wall(board, 1, 0)
add_wall(board, 0, 1)
add_wall(board, 1, 2)
add_wall(board, 2, 1)

create_player(board, 1, 1)


display_board(board)

position1_1 = check_pos(board, 1, 1)
print("Position (1 , 1): \t", position1_1)
